<p id="notice"><%= notice %></p>

<h3>Статьи движения денежных средств</h3>

<table class="highlight centered">
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @income_and_expense_items.each do |income_and_expense_item| %>
    <tr>
      <td><%= income_and_expense_item.title %></td>
      <td>



       <div style="position: relative;" >

        <%= link_to(edit_income_and_expense_item_path(income_and_expense_item), class: "waves-effect waves-teal btn") do %>
        <i class="material-icons">edit</i> 
        <% end %>

        <%= link_to(income_and_expense_item, method: :delete, data: { confirm: 'Are you sure?' } , class: "waves-effect waves-teal btn red") do %>
        <i class="material-icons">delete</i> 
        <% end %>

      </div>
    </td>
  </tr>
  <% end %>
</tbody>
</table>

<br>


<%= link_to(new_income_and_expense_item_path, class: "btn-floating btn-large waves-effect waves-light green") do %>
<i class="material-icons">add</i> 
<% end %>
