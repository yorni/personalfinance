<p id="notice"><%= notice %></p>





<table class="highlight centered">
  <thead>
    <tr>
      <th><%= sortable "created_at", "Дата создания" %></th>
      <th><%= sortable "sum", "Сумма" %> </th>
      <th><%= sortable "transactiontype", "Тип движения денег" %></th>
      <th><%= sortable "cash_box_id", "Касса" %></th>
      <th><%= sortable "income_and_expense_item_id", "Статья движения денег" %> </th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
    <tr>
     <td><%= transaction.created_at.strftime("%d/%m/%Y")  %></td>
     <td><%= format("%.2f", transaction.sum) %></td>

     <td>
       <%= transaction.transactiontype %>
     </td>


     <td><%= transaction.cash_box.title unless transaction.cash_box.blank?%></td>

     <td><%= transaction.income_and_expense_item.title unless transaction.income_and_expense_item.blank? %></td>


     <td>

       <div style="position: relative;" >



        <%= link_to(edit_transaction_path(transaction), class: "waves-effect waves-teal btn") do %>
        <i class="material-icons">edit</i> 
        <% end %>

        <%= link_to(transaction, method: :delete, data: { confirm: 'Вы уверены?' }, class: "waves-effect waves-teal btn red") do %>
        <i class="material-icons">delete</i> 
        <% end %>

      </div>
    </td>
  </tr>
  <% end %>
</tbody>
</table>

<%= paginate @transactions %>

<br>

<%= link_to(new_transaction_path, class: "btn-floating btn-large waves-effect waves-light green") do %>
<i class="material-icons">add</i> 
<% end %>




